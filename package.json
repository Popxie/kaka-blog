{
  "name": "kaka-blog",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --copy",
    "build:dev": "vue-cli-service build --mode development --report",
    "build:test": "vue-cli-service build --mode test --report",
    "build:prod": "vue-cli-service build --mode production --report",
    "clean": "rimraf ./node_modules",
    "lint": "vue-cli-service lint",
    "deploy": "sh ./deploy.sh"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "element-ui": "^2.15.5",
    "gitalk": "^1.7.0",
    "less-loader": "^6.1.1",
    "lib-flexible": "^0.3.2",
    "sass-loader": "^8.0.2",
    "screenfull": "^5.0.2",
    "vue": "^2.6.11",
    "vue-router": "^3.3.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-service": "~4.4.0",
    "babel-eslint": "^10.1.0",
    "compression-webpack-plugin": "^4.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "github-markdown-css": "^4.0.0",
    "highlight.js": "^10.4.0",
    "node-sass": "^4.14.1",
    "postcss-plugin-px2rem": "^0.8.1",
    "px2rem-loader": "^0.1.9",
    "speed-measure-webpack-plugin": "^1.3.3",
    "terser-webpack-plugin": "^3.0.3",
    "thread-loader": "^2.1.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "vue-loader": "^15.9.2",
    "vue-markdown-highlight": "^1.0.5",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-unused-vars": [
        1,
        {
          "vars": "all",
          "args": "after-used"
        }
      ],
      "vue/comment-directive": [
        0
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "precss": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
